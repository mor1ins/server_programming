
{{#if white_style}}
<div id="test-box" class="section wb">
{{else}}
<div id="testimonials" class="parallax section db parallax-off" style="background-image:url('uploads/parallax_03.jpg');">
{{/if}}
    <div class="container">
        <div class="section-title text-center">
            <h3>Testimonials</h3>
            <p class="lead">We thanks for all our awesome testimonials! There are hundreds of our happy customers! <br>Let's see what others say about GoodWEB Solutions website template!</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    {{#render_reviews}}

                        <div class="testimonial clearfix">
                            <div class="desc">
                                <h3><i class="fa fa-quote-left"></i> {{this.quote}}</h3>
                                <p class="lead">{{this.review}}</p>
                            </div>
                            <div class="testi-meta">
                                <img src="{{this.photo_path}}" alt="" class="img-responsive alignleft">
                                <h4>{{this.name}} <small>- {{this.position}}</small></h4>
                            </div>
                            <!-- end testi-meta -->
                        </div>

                    {{/render_reviews}}
                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->
